<?xml version="1.0" ?>
<project name="org.dotplot.plugin">

    <property name="workspace" value="../../../.." />
	<property name="basedir" value="../../../.." />

    <property name="org.dotplot.plugin.location" value="${workspace}/svn/org.dotplot.plugin"/>
    <property name="eclipse.location" value="/usr/share/hudson/programs/eclipse-3.4/plugins"/>
    <property name="report.output.dir" value="${workspace}/reports" />
    <property name="sources" value="${org.dotplot.plugin.location}" />
    <property name="tmpdir" value="${workspace}/tmp" />

    <property name="destdir" value="${tmpdir}/bin" />

    <property name="checkstyle.home" value = "/usr/share/hudson/programs/checkstyle" />
    <property name="simian.home" value = "/usr/share/hudson/programs/simian" />
    <property name="pmd.home" value = "/usr/share/hudson/programs/pmd" />
    <property name="crap4j.home" value="/usr/share/hudson/programs/crap4j"/>
    <property name="cobertura.home" value = "/usr/share/hudson/programs/cobertura" />
    <property name="findbugs.home" value = "/usr/share/hudson/programs/findbugs" />
    <property name="javancss.home" value = "/usr/share/hudson/programs/javancss" />
    <property name="emma.home" value = "/usr/share/hudson/programs/emma" />
	<property name="testability.home" value = "/usr/share/hudson/programs/testability" />
	
    <path id="project.classpath">
            <fileset dir="${org.dotplot.plugin.location}/lib/">
                    <include name="**/*.jar"/>
            </fileset>

            <fileset dir="${eclipse.location}">
                    <include name="**/*.jar"/>
            </fileset>
    </path>

</project>
